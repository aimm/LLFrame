source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!

target ‘LLFrame’ do

# 工具包
pod 'YYKit'

# 崩溃日志记录
pod 'Bugly'

# 上下拉刷新
pod 'MJRefresh'

# 引导页
pod 'EAIntroView'
pod 'SMPageControl'

# 异步UI
pod 'Texture'

# 网络请求
pod 'YTKNetwork'

# 布局
pod 'SDAutoLayout', '~> 2.1.3'

# 提示框
pod 'SVProgressHUD'

# 列表视图空
pod 'DZNEmptyDataSet'

# 分页视图
pod 'WMPageController'

# 轮播图
pod 'SDCycleScrollView','~> 1.75'

# 键盘管理器
pod 'IQKeyboardManager'

# 颜色库
pod 'ChameleonFramework'

# 网页进度条
pod 'NJKWebViewProgress'

# 全屏返回手势
pod 'FDFullscreenPopGesture', '1.1'

# 瀑布流
pod 'CHTCollectionViewWaterfallLayout', '~> 0.9’

# 图片选择器
pod 'TZImagePickerController'

# 基于 MWPhotoBrowser 的一个图片浏览器
pod 'IDMPhotoBrowser'

# 搜索
pod 'PYSearch'

# 弹出视图
pod 'STPopup'

# 响应式
pod 'ReactiveObjC', '~> 3.0.0'

# 星级评分
pod 'HCSStarRatingView', '~> 1.5'

# 顶部弹出的提示
pod 'RMessage'

# 推送
pod 'JPush'

# 定位
pod 'INTULocationManager'

# 选项卡
pod 'CYLTabBarController'

# Hook
pod 'Aspects'

# 动画
pod 'lottie-ios'

# 图表
pod 'PNChart'

end
